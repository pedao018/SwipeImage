<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/image_list_item_margin"
    android:background="#C4DF3D"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_list_item_height"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/image_list_item_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold" />
</LinearLayout>