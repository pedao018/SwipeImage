<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_image_dialog_review_list_item_container"
    android:layout_width="@dimen/view_image_dialog_review_list_item_width"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/view_image_dialog_review_list_item_margin"
    android:layout_marginLeft="0dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/view_image_dialog_review_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_image_dialog_review_list_item_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_shape" />
</FrameLayout>